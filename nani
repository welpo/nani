        ytfn=$(youtube-dl --get-filename "$input") || continue
        ext=".${ytfn##*.}"
        if [[ -n "$preservename" ]]; then
          oname="${ytfn%.*}"
          oname="${oname// /_}"
        else
          random
        fi
        if [[ "$quiet" == 1 ]]; then
          ytquiet="q"
        fi
        youtube-dl -"$ytquiet"o - "$input" > "$localdir"/"$oname""$ext" || continue
        share
        continue
      fi
      mapfile -t http < <(wget --spider -S --quiet "$input" 2>&1)
      # Check HTTP status is 200 OK.
      if ! [[ "${http[*]}" == *@(1.1 200|302 Found|1.1 302 Moved Temporarily)* ]]; then echo Something went wrong. Check your link and try again.; continue; fi
      for i in "${http[@]}"; do if [[ $i = *"Content-Type: "* ]]; then content="${i##*/}"; break; fi; done
      if [[ $content == *";"* ]]; then
        ext=.${content%%;*}
      else
        ext=."$content"
      fi
      random
      if [[ $quiet == 1 ]]; then
        wgetquiet="q"
      fi
      wget --no-use-server-timestamps -"$wgetquiet"O "$localdir"/"$oname""$ext" "$input"
      share
      continue
    fi
    echo "File doesn't exist! Skipping."
    continue
  fi

  # Check if /nani/ already contains a hard link to input to  provide URL directly
  if [[ -z "$oname" ]]; then
    inode=$(ls -id "$input" | cut -f1 -d " ")
    oname=$(find "$localdir" -type f -inum "$inode" -exec basename {} \; -quit)
    if [[ -n "$oname" ]]; then
      ext=
      share
      continue
    fi
  fi

  # Store filename, content and extension and create output name
  # Only store extension if input is not a directory
  if ! [ -d "$input" ]; then
    ext=".${input##*.}"
  fi
  content="$(file --mime-type "$input")"
  content="${content##* }"
  if [[ ."$input" == "$ext" ]]; then
    ext=""
  fi

  # If file has no extension and enabled on the settings, use .txt
  if [[ "$ext" == "" && "$addtxt" == 1 && ! "$content" == *@(directory|symlink)* ]]; then
    ext=".txt"
  fi

  # If filetype contains text and enabled on the settings (and is not already .txt), use .txt as extension
  if [[ "$content" == *"text"* && "$modifytext" = "1" && "$ext" != ".txt" ]]; then
    ext=".txt"
  fi

  # Check if it's a directory. If so, send arguments to zip or create symbolic link
  # Note it will use -0 as argument, which will not compress the data
  if [[ "$content" == *@(directory|symlink)* ]]; then
    if [[ "$symbolic" != "1" ]]; then
      # Check if zip is installed
      command -v zip >/dev/null 2>&1 || { echo >&2 "This script requires zip but it's not installed. Aborting."; continue; }
      ext=".zip"
      random
      if [[ "$quiet" == 1 ]]; then
        zq=" -q"
      fi
      zip -r0$zq - "${input}" > "$localdir"/"${oname}""$ext" || continue
    else
      ext=""
      random
      ln -fs "$PWD"/"${input}" "$localdir"/"$oname"
    fi
    share
    continue
  fi

  if [[ "$content" == *"flac"* && "$transcode" = "1" ]]; then
    # Check for dependencies metaflac, flac and lame
    command -v metaflac >/dev/null 2>&1 || { echo >&2 "This script requires metaflac but it's not installed. Aborting."; continue; }
    command -v flac >/dev/null 2>&1 || { echo >&2 "This script requires flac but it's not installed. Aborting."; continue; }
    command -v lame >/dev/null 2>&1 || { echo >&2 "This script requires lame but it's not installed. Aborting."; continue; }
    ext=".mp3"
    random
    # Get the tags
    ARTIST=$(metaflac "$input" --show-tag=ARTIST | sed s/.*=//g)
    TITLE=$(metaflac "$input" --show-tag=TITLE | sed s/.*=//g)
    ALBUM=$(metaflac "$input" --show-tag=ALBUM | sed s/.*=//g)
    GENRE=$(metaflac "$input" --show-tag=GENRE | sed s/.*=//g)
    TRACKNUMBER=$(metaflac "$input" --show-tag=TRACKNUMBER | sed s/.*=//g)
    DATE=$(metaflac "$input" --show-tag=DATE | sed s/.*=//g)
    # Stream flac into the lame encoder, using -s and --quiet for the arguments if quiet mode is enabled:
    if [[ "$quiet" == 1 ]]; then
      qf="-s "
      ql="--quiet "
    fi
    flac -c -d $qf"$input" | lame -V0 --vbr-new --add-id3v2 --pad-id3v2 $ql--ignore-tag-errors\
      --ta "$ARTIST" --tt "$TITLE" --tl "$ALBUM"  --tg "${GENRE:-12}" \
      --tn "${TRACKNUMBER:-0}" --ty "$DATE" - "$localdir"/"$oname""$ext" || continue
    share
    continue
  else
    random
    copy
    share
  fi
done

